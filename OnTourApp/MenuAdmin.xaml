        </Controls:Tile>

        <Controls:Tile x:Name="btnGestionTours" Title="Gestion Tours" Grid.Row="2" Grid.Column="4" Background="#FF3373F2" Height="Auto" Width="Auto" HorizontalTitleAlignment="Center" Margin="0">
            <iconPacks:PackIconModern Kind="TransitBus" Foreground="White" Height="100" Width="100" />
        </Controls:Tile>

        <Controls:Tile x:Name="btnConsultarAporte" Title="Consultar Aporte" Grid.Row="5" Grid.Column="4" Background="#FF3373F2" Width="Auto" Height="Auto" HorizontalTitleAlignment="Center" Margin="0">
            <iconPacks:PackIconModern Kind="Money" Foreground="White" Height="100" Width="100" />
        </Controls:Tile>

        <Controls:Tile x:Name="btnGestionSeguro" Title="Gestion Seguro" Grid.Row="2" Grid.Column="6" Background="#FF3373F2" Height="Auto" Width="Auto" HorizontalTitleAlignment="Center" Margin="0">
            <iconPacks:PackIconModern Kind="Shield" Foreground="White" Height="100" Width="100" />
        </Controls:Tile>

        <Controls:Tile x:Name="btnGenerarInforme" Title="Generar Informe" Grid.Row="5" Grid.Column="6" Background="#FF3373F2" Width="Auto" Height="Auto" HorizontalTitleAlignment="Center" Margin="0">
            <iconPacks:PackIconModern Kind="Information" Foreground="White" Height="100" Width="100" />
        </Controls:Tile>

    </Grid>
